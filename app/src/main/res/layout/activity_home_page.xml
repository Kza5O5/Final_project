<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/homebar"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/home_conor"
            android:backgroundTint="@color/main" />

        <TextView
            android:id="@+id/txtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME :"
            android:textColor="@color/white"
            android:fontFamily="@font/teacher_reg"
            android:textSize="25sp"
            android:layout_alignLeft="@+id/pfp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="135dp" />

        <EditText
            android:id="@+id/edtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zengg U Hout"
            android:textSize="25sp"
            android:fontFamily="@font/teacher_reg"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:layout_marginStart="235dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID :"
            android:textColor="@color/white"
            android:fontFamily="@font/teacher_reg"
            android:textSize="25sp"
            android:layout_alignLeft="@+id/pfp"
            android:layout_below="@+id/txtname"
            android:layout_marginStart="135dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0008113"
            android:textSize="25sp"
            android:fontFamily="@font/teacher_reg"
            android:textColor="@color/white"
            android:layout_below="@+id/edtname"
            android:layout_marginStart="190dp"
            android:layout_marginTop="-20dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/pfp"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@id/homebar"
            android:layout_marginTop="-110dp"
            android:layout_marginStart="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pfp"
            app:shapeAppearanceOverlay="@style/circle" />

        <TextView
            android:id="@+id/course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/homebar"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="My Course"
            android:fontFamily="@font/teacher_bold"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <RelativeLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/course"
            android:layout_marginTop="10dp">

            <View
                android:id="@+id/box1"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/curve"
                android:alpha="0.5" />

            <TextView
                android:id="@+id/textmycourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Course"
                android:textColor="@color/black"
                android:fontFamily="@font/teacher_bold"
                android:textSize="20sp"
                android:layout_marginStart="60dp" />

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/textmycourse"
                android:background="@drawable/homework"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                />

            <View
                android:id="@+id/box2"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_toEndOf="@id/box1"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/curve"
                android:alpha="0.5" />

            <TextView
                android:id="@+id/mygrande"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Grade"
                android:textColor="@color/black"
                android:fontFamily="@font/teacher_bold"
                android:textSize="20sp"
                android:layout_marginEnd="60dp"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/mygrande"
                android:background="@drawable/grade"
                android:layout_marginEnd="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear1"
            android:layout_marginTop="20dp">

            <View
                android:id="@+id/box3"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/curve"
                android:alpha="0.5" />

            <TextView
                android:id="@+id/textpr"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Permission Request"
                android:textColor="@color/black"
                android:fontFamily="@font/teacher_bold"
                android:textSize="20sp"
                android:lineHeight="20dp"
                android:layout_marginStart="50dp"
                android:textAlignment="center" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/textpr"
                android:background="@drawable/notification"
                android:layout_marginStart="55dp"
                android:layout_marginTop="5dp"
                />

            <View
                android:id="@+id/box4"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_toEndOf="@id/box3"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/curve"
                android:alpha="0.5" />

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:textColor="@color/black"
                android:fontFamily="@font/teacher_bold"
                android:textSize="20sp"
                android:layout_marginEnd="80dp"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/rating"
                android:background="@drawable/rating"
                android:layout_marginEnd="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/classtoday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Class Today"
            android:textSize="25sp"
            android:fontFamily="@font/teacher_bold"
            android:textColor="@color/black" />

        <View
            android:id="@+id/classupdate"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/classtoday"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/curve"
            android:alpha="0.5" />

        <TextView
            android:id="@+id/txtclasstoday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Class Today is :"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:fontFamily="@font/teacher_reg"
            android:layout_below="@id/classtoday"
            android:layout_marginTop="25dp"
            android:layout_marginStart="35dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CS 216"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:fontFamily="@font/teacher_reg"
            android:layout_below="@id/classtoday"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="55dp"
            />

        <EditText
            android:id="@+id/subjecttoday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile App Dev"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:fontFamily="@font/teacher_reg"
            android:layout_below="@id/txtclasstoday"
            android:layout_marginStart="33dp"
            />
        <TextView
            android:id="@+id/txttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time :"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:fontFamily="@font/teacher_reg"
            android:layout_below="@id/subjecttoday"
            android:layout_marginStart="35dp"
            android:layout_marginTop="2dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:15 - 5:15"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:fontFamily="@font/teacher_reg"
            android:layout_below="@id/subjecttoday"
            android:layout_marginStart="110dp"
            android:layout_marginTop="-8dp"
            />

        <RelativeLayout
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/classupdate"
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <View
                android:id="@+id/box_a"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/curve"
                android:alpha="0.7" />

            <TextView
                android:id="@+id/texthomework"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Homework"
                android:textColor="@color/black"
                android:fontFamily="@font/teacher_bold"
                android:textSize="20sp"
                android:layout_marginStart="40dp" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/texthomework"
                android:background="@drawable/homework"
                android:layout_marginStart="40dp"
                />


            <View
                android:id="@+id/box_b"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_toEndOf="@id/box_a"
                android:layout_marginStart="20dp"
                android:background="@drawable/curve"
                android:alpha="0.7" />

            <TextView
                android:id="@+id/textassigment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assignment"
                android:textColor="@color/black"
                android:fontFamily="@font/teacher_bold"
                android:textSize="20sp"
                android:layout_marginEnd="33dp"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/textassigment"
                android:background="@drawable/contract"
                android:layout_marginEnd="40dp"
                android:layout_alignParentEnd="true"
                />
            <View
                android:id="@+id/box_c"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_below="@id/box_a"
                android:layout_alignStart="@id/box_a"
                android:layout_marginTop="10dp"
                android:background="@drawable/curve"
                android:alpha="0.7" />
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_below="@+id/textpermission"
                android:background="@drawable/asking"
                android:layout_marginStart="40dp"
                />
            <TextView
                android:id="@+id/textpermission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Permission"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/teacher_bold"
                android:layout_marginTop="152dp"
                android:layout_marginStart="38dp"
                />
            <View
                android:id="@+id/box_d"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_below="@id/box_b"
                android:layout_alignStart="@id/box_b"
                android:layout_marginTop="10dp"
                android:background="@drawable/curve"
                android:alpha="0.7" />

            <TextView
                android:id="@+id/textgrievance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grievance"
                android:textColor="@color/black"
                android:fontFamily="@font/teacher_bold"
                android:textSize="20sp"
                android:layout_marginEnd="37dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="152dp"
                />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/textgrievance"
                android:background="@drawable/warning"
                android:layout_marginEnd="40dp"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_below="@id/button"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/poster"
            app:shapeAppearanceOverlay="@style/Roundedbanner" />

    </RelativeLayout>
</ScrollView>
